# ZakOps Dashboard - Environment Configuration
# =============================================
# Copy this file to .env.local and fill in the values

# =============================================================================
# API URLs
# =============================================================================

# Backend API URL (deal lifecycle, actions, quarantine)
NEXT_PUBLIC_API_URL=http://localhost:8091
API_URL=http://localhost:8091
BACKEND_URL=http://localhost:8091

# Agent API URL (AI chat assistant)
NEXT_PUBLIC_AGENT_API_URL=http://localhost:8095

# =============================================================================
# Agent Provider Configuration
# =============================================================================

# Provider type: local | openai | anthropic | custom
# - local: ZakOps Agent API (default)
# - openai: OpenAI API (not yet implemented)
# - anthropic: Anthropic API (not yet implemented)
# - custom: Custom API endpoint (not yet implemented)
AGENT_PROVIDER=local

# -----------------------------------------------------------------------------
# Local Provider Settings (for AGENT_PROVIDER=local)
# -----------------------------------------------------------------------------

# Agent API base URL
AGENT_LOCAL_URL=http://localhost:8095

# Service token for authentication (X-Service-Token header)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AGENT_LOCAL_API_KEY=your-service-token-here

# Request timeout in milliseconds
AGENT_LOCAL_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Alternative Environment Variable Names (backward compatibility)
# -----------------------------------------------------------------------------
# These are supported for compatibility with existing configurations

# DASHBOARD_SERVICE_TOKEN - same as AGENT_LOCAL_API_KEY
# AGENT_SERVICE_TOKEN - same as AGENT_LOCAL_API_KEY

# =============================================================================
# Optional Settings
# =============================================================================

# Enable debug logging
# DEBUG=true
