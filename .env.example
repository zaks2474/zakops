# ZakOps Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://zakops:zakops@localhost:5432/zakops

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Service URLs
# =============================================================================
RAG_REST_URL=http://localhost:8052
AGENT_API_URL=http://localhost:8095
BACKEND_API_URL=http://localhost:8091

# =============================================================================
# Authentication
# =============================================================================
AUTH_REQUIRED=true
# JWT_SECRET=your-secret-key-here

# =============================================================================
# LLM Configuration
# =============================================================================
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key

# =============================================================================
# Observability
# =============================================================================
# LANGSMITH_API_KEY=your-langsmith-key
# LANGSMITH_PROJECT=zakops-dev
# LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
# LANGFUSE_SECRET_KEY=your-langfuse-secret-key

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_HITL=true
ENABLE_AUDIT_LOG=true
